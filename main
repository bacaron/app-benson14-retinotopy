#!/bin/bash
#PBS -l nodes=1:ppn=4,vmem=60gb,walltime=24:00:00
#PBS -N pRF
#PBS -V

set -e
set -x

output=$(jq -r .freesurfer config.json)
[ -z "$FREESURFER_LICENSE" ] && echo "Please set FREESURFER_LICENSE in .bashrc" && exit 1;
echo $FREESURFER_LICENSE > license.txt

#cp -R "$output" "$SUBJECTS_DIR"
#subj_dir=$SUBJECTS_DIR
subj_dir=$(dirname $output)

time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://davhunt/neuropythy:1.4 bash -c "SUBJECTS_DIR=$subj_dir && python -m neuropythy benson14_retinotopy $(basename $output) -o nifti -v nifti -d $subj_dir"

mkdir prf
cp $SUBJECTS_DIR/output/surf/*benson14* prf && cp $SUBJECTS_DIR/output/mri/*benson14* prf
mv prf/benson14_eccen.nii.gz prf/eccentricity.nii.gz && mv prf/benson14_sigma.nii.gz prf/rfWidth.nii.gz && \
mv prf/benson14_angle.nii.gz prf/polarAngle.nii.gz && mv prf/benson14_varea.nii.gz prf/varea.nii.gz
